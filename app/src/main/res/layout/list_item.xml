<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/container_country"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/testing"
    android:clickable="true"


    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"

        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToOutline="true"
        android:elevation="5dp"
        android:background="@drawable/bilog"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints"
    android:id="@+id/ContainerCountry"


   >

    <TextView
        android:id="@+id/CountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:text="Country Name"
        android:maxLines="1"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:textStyle="bold"

       />
    <TextView
        android:id="@+id/countrOfficial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:gravity="center"
        tools:text="Official Name"
        android:textColor="@color/black" />
    <!--Other Details About the Country When Expanded-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center_vertical"
        >
   <!--Button Inside Expanded Container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >
            <Button
                android:id="@+id/MoreButton"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="More"
                android:textAllCaps="false"
                android:background="@null"/>
        </LinearLayout>
        <ImageView
        android:id="@+id/flagInside"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:elevation="20dp"
        android:scaleType="fitXY"
        android:clipToOutline="true"/>

        <TextView
            android:id="@+id/CountryNameExpanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="24sp"
            tools:text="Country Name"
            android:maxLines="1"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:textStyle="bold"

            />
        <TextView

            android:id="@+id/countrOfficialExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:gravity="center"
            tools:text="Official Name"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <TextClock
                android:id="@+id/textDateCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:format12Hour="MM-dd-yyyy"
                android:format24Hour="MM-dd-yyyy"
                android:textStyle="bold"
                />
            <TextClock
                android:id="@+id/textClockCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:format12Hour="hh:mm:ss a"
                android:format24Hour="HH:mm:ss"

                />

            <LinearLayout
                android:id="@+id/teaserData"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:orientation="horizontal">

             <!--Population-->
                <LinearLayout
                    android:id="@+id/teaserPopulationData"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/Population"
                        android:text="Population"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Population"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/khaki"/>
                <!--Capital-->
                <LinearLayout
                    android:id="@+id/teaserCapitalData"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/Capital"
                        android:text="Capital"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="15sp"

                        android:gravity="center"/>
                    <TextView
                        android:text="Capital"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                </LinearLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/khaki"/>
                <!--Region-->
                <LinearLayout
                    android:id="@+id/teaserRegionData"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/Region"
                        android:text="Region"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/SubRegion"
                        android:text="Region"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/black"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>


</LinearLayout>
